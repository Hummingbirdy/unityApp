<br />
<div class="container">
   <div class="project-header">
        <h1>
          <%= @group.title %>
          <%=link_to  edit_group_path(@group) do %><i class="fa fa-pencil-square-o >"></i><% end  %>
        </h1>
      
      <p>
        <%= @group.description %>
      </p>
    </div>
	<div class="row">
		<div class="col-md-4">
     
      <div class="group-tile">
      <h2>Group Members</h2>
      <div class="underline"></div>
      <ul>
        <li><%= @group.user.email %></li>
        <% for member in @group.teammates %>
            <li><%= member.email %></li>
        <% end %>
      </ul>
      </div>
      <br/>
      <div class="document-tile">
        <h2>Documents</h2>
        <div class="underline"></div>

        <ul>
          <li>
            <%= link_to 'test link to doc 1' %>
          </li>
          <li>
            <%= link_to 'test link 2' %>
          </li>
          <li>
            <%= link_to 'one more' %>
          </li>
          <li>
            <%= link_to 'last placeholder' %>
          </li>
        </ul>
      </div>
    </div>

    <div class="col-md-8">
           <% for project in @group.projects %>
        <div class="main-tile">
          <h3><b><%= project.name %></b> <font style="font-size: 12px;">(<i>Due: <%= project.due_date %> <% if project.due_time %><%= project.due_time.strftime(" at %I:%M %p") %> <% end %></i>)</font></h3>
          <font style="font-size: 15px;"><%=project.description %></font></li>
                  <div class="underline"></div>

          <h4 class="task">Tasks</h4>
          <div class="underline-left"></div>
          <div class="transitions-enabled row" id="tasks">
            <% for task in project.tasks %>
                  <div class="task-tile">
                    <div><b><%= task.name %></b></div>
                    <div><%= task.description %></div>
                    <% if task.due_date %>
                      <div>Due on <%= task.due_date %> <% if task.due_time %><%= task.due_time.strftime(" at %I:%M %p") %><% end %></div>
                    <% end %>
                    <% if task.hours %>
                      <div>Estimated <%= task.hours %> hours to go</div>
                    <% end %>
                    <div> Assigned To: <%= task.member %> </div>
                    <br />
                  </div>
                <br>
            <% end %>
          </div>
        </div>
        <br>
        <div align="right">        <%= link_to '+ Add/Edit Projects', add_groups_path(@group) %>
| <%= link_to '+ Add/Edit Tasks', add_projects_path(project) %></div>
      </div>
      <% end %>

        <%#= render 'a', group: @group %>
      </div>
    </div>
  </div>
</div>

