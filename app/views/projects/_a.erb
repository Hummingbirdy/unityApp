
<%= form_with(model: @project, local: true) do |form| %>
    <h1><%= @project.name %></h1>
    <div class="form-group">

      <%= form.nested_fields_for :tasks do |task| %>
          <div class="form-group row">
            <div align="right" class="col-md-2">
              <b>Task Name: </b>
            </div>
            <div class="col-md-6">
              <%= task.text_field :name, placeholder: 'e.g., Create Outline', class: 'input' %>
              <%= task.remove_nested_fields_link %> <br />
            </div>
          </div>
          <div class="form-group row">
            <div align="right" class="col-md-2">
              <b>Description: </b>
            </div>
            <div class="col-md-6">
              <%= task.text_field :description, placeholder: 'optional', class: 'input' %> <br />
            </div>
          </div>
          <div class="form-group row">
            <div align="right" class="col-md-2">
              <b>Due Date: </b>
            </div>
            <div class="col-md-6">
              <%= task.datetime_field :due_date, class: 'input' %>
            </div>
          </div>
          <div class="form-group row">
            <div align="right" class="col-md-2">
              <b>Hours Left:  </b>
            </div>
            <div class="col-md-6">
              <%= task.text_field :hours, class: 'input' %>
            </div>
          </div>
      <% end %>
      <%= form.add_nested_fields_link :tasks, '+ Add Task' %>
    </div>
    <div align="right" class="actions">
      <%= form.submit 'Save' %>
    </div>
<% end %>
